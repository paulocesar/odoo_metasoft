<script type='template' id='tpl-display-logins' class='tpl'>
    <h2 class='display-title'>Usu√°rios</h2>

    <div class="row">
        <div class="col-md-6">
            <input type='text' class='crud-busca form-control' placeHolder='buscar...'>
            <div class='row fix-header'>
                <div class='col-md-4 login'>Login</div>
                <div class='col-md-4 papel'>Papel</div>
                <div class='col-md-4 none'>Nome</div>
            </div>
            <div class='list-container'>
                <table class="table table-striped table-hover crud-list">
                </table>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-horizontal form-crud">
                <div class="form-group">
                    <label for="login" class="col-sm-2 control-label">Login</label>
                    <div class="col-sm-10"><input type="text" name="login" class="form-control not-empty unique"></div>
                </div>
                <div class="form-group">
                    <label for="senha" class="col-sm-2 control-label">Senha</label>
                    <div class="col-sm-10"><input type="text" name="senha" class="form-control not-empty"></div>
                </div>
                <div class="form-group">
                    <label for="nome" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10"><input type="text" name="nome" class="form-control not-empty"></div>
                </div>

                <div class="form-group">
                    <label for="papel" class="col-sm-2 control-label">Papel</label>
                    <div class="col-sm-10"><input type="text" name="papel" class="form-control not-empty"></div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-success save left margin-right">Salvar</button>
                        <button class="btn btn-default remove hidden left">Excluir</button>
                        <button class="btn btn-info new hidden right">Novo</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>

<script type='template' id='tpl-display-loginsListItem'>
    <tbody>
        {% _.each(items, function (c) { %}
            <tr data-rowid='{%= c.id %}' class='clickable'>
                <td class='col-md-4 login'>{%= c.login %}</td>
                <td class='col-md-4 papel'>{%= c.papel %}</td>
                <td class='col-md-4 nome'>{%= c.nome %}</td>
            </tr>
        {% }) %}
    </tbody>
</script>
