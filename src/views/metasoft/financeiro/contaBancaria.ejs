<script type='template' id='tpl-display-contaBancaria' class='tpl'>
    <h2>Contas Bancárias</h2>

    <div class="row">
        <div class="col-md-6 list-container">
            <table class="table table-striped table-hover conta-banco-list">
            </table>
        </div>

        <div class="col-md-6">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="banco" class="col-sm-2 control-label">Banco</label>
                    <div class="col-sm-10"><input type="text" name="banco" class="form-control not-empty"></div>
                </div>
                <div class="form-group">
                    <label for="agencia" class="col-sm-2 control-label">Agência</label>
                    <div class="col-sm-10"><input type="text" name="agencia" class="form-control not-empty"></div>
                </div>
                <div class="form-group">
                    <label for="conta" class="col-sm-2 control-label">Conta</label>
                    <div class="col-sm-10"><input type="text" name="conta" class="form-control not-empty"></div>
                </div>

                <div class="form-group">
                    <label for="saldo" class="col-sm-2 control-label">Saldo</label>
                    <div class="col-sm-10"><input type="text" name="saldo" class="form-control mask-money"></div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-default salvar">Salvar</button>
                        <button class="btn btn-default excluir">Excluir</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</script>

<script type='template' id='tpl-display-contaBancaria-itemConta'>
    <tbody>
        {% _.each(contas, function (c) { %}
            <tr data-rowid='{%= c.id %}' class='clickable'>
                <td>{%= c.agencia %} / {%= c.conta %}</td>
                <td class='money'>{%= Metasoft.money.format(c.saldo) %}</td>
                <td>{%= c.banco %}</td>
            </tr>
        {% }) %}
    </tbody>
</script>
